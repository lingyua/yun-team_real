<!-- pages/car/page_car.wxml -->
<view class="all">
  <view class="head_input">
    <van-cell title="时间" icon="clock-o" is-link bind:click="onTap" value="{{time}}" />
    <van-cell title="起点" icon="location-o" is-link bind:click="getUserLocationstart" value="{{qidian}}" center="{{true}}"/>
    <van-cell title="终点" icon="location-o" is-link bind:click="getUserLocationover" value="{{zhongdian}}" center="{{true}}" />
    <van-cell-group>
      <!-- 输入框 -->
      <van-field maxlength="30" value="{{ id_mess }}" left-icon="phone-o" center clearable label="联系方式" placeholder="请注意保护敏感信息" border="{{ false }}" bind:input="Input_mess" use-button-slot></van-field>
    </van-cell-group>
    <van-cell-group>
      <!-- 输入框 -->
      <van-field maxlength="150" value="{{ beizhu }}" left-icon="edit" center clearable label="备注" placeholder="说点想补充的吧" border="{{ false }}" bind:input="Input_beizhu" use-button-slot>
        <van-button slot="button" size="small" type="primary" bind:click="Push">发布</van-button>
      </van-field>
    </van-cell-group>
     <!-- 位置授权弹窗 -->
  <van-popup show="{{ showlocation }}"  overlay="{{ true }}" bind:click-overlay="onCloseload">
    <view class="openload">
      <view class="loadtext">需要你允许位置授权</view>
      <view class="butload">
        <van-button   type="info"  bind:click="onCloseload">偏不</van-button>
        <view style="width:16vw;height:5vw;"></view>
        <van-button slot="button"  type="primary"  bind:click="Opensetting">好的</van-button>
      </view>
    </view>
  </van-popup>
    <!-- 弹出框 -->
    <van-popup show="{{ showTime }}" position="bottom" overlay="{{ true }}" bind:click-overlay="onClose">
      <!-- 时间选择器 -->
      <van-datetime-picker type="datetime" value="{{ currentDate }}" min-date="{{ minDate }}" max-date="{{ maxDate }}" bind:confirm="onInput" bind:cancel="onClose" />
    </van-popup>
  </view>
  <view style="height:10vw;background-color:rgb(251,251,251);"></view>
  <!-- 输出面板 -->
  <view class='content' wx:for="{{arrcar}}" wx:key="125">
    <view class="userinfo">
      <block>
        <image class="userinfo-avatar" src="{{item.touxiang}}"></image>
        <text class="userinfo-nickname">{{item.nickname}}</text>
      </block>
    </view>
    <van-panel desc="发布时间：{{item.Nowtime}}">
      <view class="push">
        <view class="item">时间：{{item.time}}</view>
        <view class="item">起点：{{item.qidian}}</view>
        <view class="item">终点：{{item.zhongdian}}</view>
      </view>
      <van-collapse value="{{ activeNames }}" bind:change="onChange">
        <van-collapse-item value="顺道" icon="logistics" name="{{index}}">
          <view>联系方式：{{ item.id_mess }}</view>
          <view>备注：{{ item.beizhu }}</view>
        </van-collapse-item>
      </van-collapse>
      <view style="height:5vw;background-color:rgb(251,251,251);"></view>
    </van-panel>
  </view>
  <view class="loading" wx:if="{{loading}}">
    <van-loading type="spinner" color="#faf9f9" size="6vw" />
  </view>
  <view wx:if="{{end}}" style="text-align:center; position: relative; bottom: 1px;width:100vw;height:7vh;font-size:3vw;background-color:rgb(251,251,251);">
    已经到底了哦~
  </view>
</view>