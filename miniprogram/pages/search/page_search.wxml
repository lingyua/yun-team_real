<!-- miniprogram/pages/search/page_search.wxml -->
<view class="searchbox">
    <view class="head">
        <image src="https://neauhand.hhp.im/img/zudui.png" class="logo"></image>
        <view style="padding:2vw 0 0 0;">To seek,to find!</view>
    </view>
</view>
<view class="searchtab">
    <van-search value="{{ vasearch }}" placeholder="请输入搜索关键词" use-action-slot bind:change="onSearch" shape="round"></van-search>
</view>
<view style="height:2vw;"></view>
<view wx:for="{{article}}" wx:key='123'>
    <van-panel desc="发布时间:{{item.touxiang}}">
        <view class="push">
            <view class="item">时间:{{item.Nowtime}}</view>
            <view class="item">起点:{{item.qidian}}</view>
            <view class="item">终点:{{item.zhongdian}}</view>
            <view class="item">联系方式:{{ item.id_mess }}</view>
            <view class="item">备注:{{ item.beizhu }}</view>
        </view>
        <view style="height:5vw;background-color:rgb(251,251,251);"></view>
    </van-panel>
</view>
